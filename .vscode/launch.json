{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run selected Jest test",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "test"
            ],
            "args": [
                "--",
                "-i",
                "${file}",
                "-t",
                "--no-coverage"
            ],
            "console": "integratedTerminal",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch converter",
            "program": "${workspaceFolder}/src/main-antlr4.ts",
            "outFiles": [
                "${workspaceFolder}/output/**/*.js"
            ],
            "sourceMaps": true,
            "stopOnEntry": false,
            "smartStep": true,
            "args": [],
            "runtimeArgs": [
                "--nolazy"
            ],
            "console": "integratedTerminal",
            "preLaunchTask": "tsc: watch",
            "trace": false
        },
    ]
}
