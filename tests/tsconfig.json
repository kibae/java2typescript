{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES2022",
        "module": "ES2022",
        "noEmit": true,
        "declaration": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "noImplicitAny": true,
        "noImplicitOverride": false,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "removeComments": false
    },
    "include": [
        "**/*.spec.ts",
    ],
    "exclude": [
        "../node_modules",
        "../src/**/*",
        "../output/**/*",
    ]
}
