{
    "name": "java2ts",
    "version": "0.1.0",
    "description": "Convert Java Code to Typescript",
    "keywords": [
        "Java",
        "Typescript",
        "ANTLR4"
    ],
    "type": "commonjs",
    "author": "Mike Lischke",
    "license": "MIT",
    "dependencies": {
        "antlr4-c3": "2.2.1",
        "antlr4ts": "0.5.0-alpha.4",
        "glob": "8.0.3",
        "immutable": "4.1.0",
        "printf": "0.6.1",
        "unicode-properties": "1.4.1"
    },
    "devDependencies": {
        "@types/glob": "^8.0.0",
        "@types/jest": "^29.2.3",
        "@types/node": "^18.11.9",
        "@typescript-eslint/eslint-plugin": "^5.43.0",
        "@typescript-eslint/eslint-plugin-tslint": "^5.43.0",
        "@typescript-eslint/parser": "^5.43.0",
        "antlr4ts-cli": "^0.5.0-alpha.4",
        "eslint": "^8.28.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsdoc": "^39.6.2",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "jest": "^29.3.1",
        "ts-jest": "^29.0.3",
        "typescript": "^4.9.3"
    },
    "scripts": {
        "build": "npm run antlr4ts && tsc",
        "test": "jest --testMatch [ \"**/output/src/test/**/*.spec.js\" ] --no-coverage --watchAll=false --max-worker=1",
        "test-ci": "jest --testMatch [ \"**/output/src/test/**/*.spec.js\" ] --no-coverage --watchAll=false --silent",
        "test-coverage": "jest  --testMatch [ \"**/src/test/**/*.spec.ts\" ] --coverage --silent",
        "lint": "eslint \"./src/**/*.ts\"",
        "antlr4ts": "antlr4ts -Xexact-output-dir ./java/JavaLexer.g4 ./java/JavaParser.g4 -visitor -o ./java/generated"
    },
    "jest": {
        "testEnvironment": "node",
        "preset": "ts-jest",
        "verbose": false,
        "testPathIgnorePatterns": [
            "node_modules"
        ],
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transformIgnorePatterns": [
            "/output/.+\\.js"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/test/**"
        ],
        "coverageReporters": [
            "json",
            "text",
            "clover",
            "html"
        ],
        "coverageThreshold": {
            "global": {
                "statements": 30,
                "branch": 15,
                "functions": 15,
                "lines": 30
            }
        }
    }
}
