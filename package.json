{
    "name": "java2ts",
    "version": "0.1.0",
    "description": "Convert Java Code to Typescript",
    "keywords": [
        "Java",
        "Typescript",
        "ANTLR4"
    ],
    "type": "module",
    "author": "Mike Lischke",
    "license": "MIT",
    "dependencies": {
        "antlr4-c3": "3.0.1",
        "antlr4ts": "0.5.0-alpha.4",
        "glob": "9.3.2",
        "jree": "1.2.0"
    },
    "devDependencies": {
        "@types/glob": "8.1.0",
        "@types/jest": "29.5.0",
        "@types/jsdom": "21.1.1",
        "@types/node": "18.15.10",
        "@typescript-eslint/eslint-plugin": "5.56.0",
        "@typescript-eslint/parser": "5.56.0",
        "antlr4ts-cli": "0.5.0-alpha.4",
        "eslint": "8.36.0",
        "eslint-plugin-import": "2.27.5",
        "eslint-plugin-jsdoc": "40.1.0",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "jest": "29.5.0",
        "ts-jest": "29.0.5",
        "ts-node": "10.9.1",
        "typescript": "5.0.2"
    },
    "scripts": {
        "build": "npm run antlr4ts && tsc",
        "fetch-apis": "node --experimental-specifier-resolution=node --loader ts-node/esm src/tools/fetchJavaApis.ts",
        "run-conversion": "node --experimental-specifier-resolution=node --loader ts-node/esm src/main-antlr4.ts",
        "test": "jest --testMatch [ \"**/tests/**/*.spec.ts\" ] --no-coverage --watchAll=false",
        "test-ci": "jest --testMatch [ \"**/tests/**/*.spec.ts\" ] --no-coverage --watchAll=false --silent",
        "test-coverage": "jest  --testMatch [ \"**/tests/**/*.spec.ts\" ] --coverage --silent",
        "lint": "eslint \"./src/**/*.ts\"",
        "antlr4ts": "antlr4ts -Xexact-output-dir ./parser/JavaLexer.g4 ./parser/JavaParser.g4 -visitor -o ./parser/generated"
    }
}
