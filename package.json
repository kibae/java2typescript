{
    "name": "java2ts",
    "version": "0.1.0",
    "description": "Convert Java Code to Typescript",
    "keywords": [
        "Java",
        "Typescript",
        "ANTLR4"
    ],
    "type": "commonjs",
    "author": "Mike Lischke",
    "license": "MIT",
    "dependencies": {
        "antlr4-c3": "2.2.1",
        "antlr4ts": "0.5.0-alpha.4",
        "glob": "8.0.3"
    },
    "devDependencies": {
        "@types/glob": "^8.0.0",
        "@types/jest": "^29.2.3",
        "@types/node": "^18.11.9",
        "@typescript-eslint/eslint-plugin": "^5.43.0",
        "@typescript-eslint/eslint-plugin-tslint": "^5.43.0",
        "@typescript-eslint/parser": "^5.43.0",
        "antlr4ts-cli": "^0.5.0-alpha.4",
        "eslint": "^8.27.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsdoc": "^39.6.2",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "jest": "^29.3.1",
        "ts-jest": "^29.0.3",
        "typescript": "^4.9.3"
    },
    "scripts": {
        "build:sourcemap": "tsc --sourceMap",
        "test": "jest --no-cache --runInBand --testMatch [ \"**/src/test/**/*.spec.ts\" ] --no-coverage --watchAll=false",
        "test-coverage": "jest  --testMatch [ \"**/src/test/**/*.spec.ts\" ] --coverage",
        "lint": "eslint \"./src/**/*.ts\"",
        "antlr4ts": "antlr4ts -Xexact-output-dir ./java/JavaLexer.g4 ./java/JavaParser.g4 -visitor -o ./java/generated"
    },
    "jest": {
        "testEnvironment": "node",
        "preset": "ts-jest",
        "verbose": false,
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "testPathIgnorePatterns": [
            "/output/",
            "/node_modules/"
        ],
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transformIgnorePatterns": [
            "/output/.+\\.js"
        ],
        "collectCoverageFrom": [
            "lib/**/*.ts"
        ],
        "coverageReporters": [
            "json",
            "text",
            "clover",
            "html"
        ],
        "coverageThreshold": {
            "global": {
                "statements": 35,
                "branch": 18,
                "functions": 20,
                "lines": 35
            }
        }
    }
}
