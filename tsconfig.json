{
    "compilerOptions": {
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "module": "NodeNext",
        "outDir": "./output",
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitOverride": false,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "rootDirs": [],
        "resolveJsonModule": true
    },
    "include": [
        "index.ts",
        "src/**/*.ts",
        "parser/generated/**/*.ts",
        "data/**/*.json",
        "tools/convertJDKTests.ts"
    ],
    "exclude": [
        "node_modules/**/*",
        "output/**/*",
    ],
    "ts-node": {
        "esm": true
    },
    "hooks": [
        "file-permissions"
    ],
    "filePermissions": {
        "output/src/convert.js": "0744"
    }
}
