{
    "compilerOptions": {
        "target": "esnext",
        "module": "CommonJS",
        "outDir": "output",
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "moduleResolution": "Node",
    },
    "include": [
        "src/**/*.ts",
        "lib/**/*.ts",
        "antlr4/**/*.ts",
        "java/generated/**/*.ts",
        "lib/Decorators.ts"
    ]
}
