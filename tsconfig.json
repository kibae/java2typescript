{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "outDir": "output",
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "moduleResolution": "Node",
        "strict": true,
    },
    "include": [
        "src/**/*.ts",
        "src/lib/**/*.ts",
        "java/generated/**/*.ts",
        "src/lib/Decorators.ts",
        "src/test/**/*.ts"
    ],
    "exclude": [
        "node_modules/**/*.*",
        "output/**/*.*"
    ]
}
